<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">


    <persistence-unit name="db1" transaction-type="JTA">
        <jta-data-source>java:app/jdbc/db1</jta-data-source>
        <class>icoder.entities.Client</class>
        <properties>
            <property name="eclipselink.ddl-generation" value="create-tables"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="db2" transaction-type="JTA">
        <jta-data-source>java:app/jdbc/db2</jta-data-source>
        <class>icoder.entities.Client</class>
        <properties>
            <property name="eclipselink.ddl-generation" value="create-tables"/>
        </properties>
    </persistence-unit>


</persistence>
